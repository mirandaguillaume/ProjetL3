<?php

namespace ProjetL3\LienBundle\Entity;

use Doctrine\ORM\EntityRepository;

/**
 * LienRepository
 *
 * This class was generated by the Doctrine ORM. Add your own custom
 * repository methods below.
 */
class LienRepository extends EntityRepository
{
    public function myFindAll()
    {
        // fonction Ã  utiliser pour afficher tous les liens sur la page d'accueil
        return $this->createQueryBuilder('l')
            ->getQuery()
            ->getResult();
    }

    public function findLastPosts($duree){
        $date = new \DateTime();
        $date->add(new \DateInterval($duree));
        return $this->createQueryBuilder('u')
            ->where('u.date < ?1')
            ->setParameter(1,$date)
            ->getQuery()
            ->getResult();
    }

}
