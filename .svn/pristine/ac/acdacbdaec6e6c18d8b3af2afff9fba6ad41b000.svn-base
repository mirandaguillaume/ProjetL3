ProjetL3\UserBundle\Entity\User:
    type:  entity
    table: fos_user
    id:
        id:
            type: integer
            generator:
                strategy: AUTO
    fields:
        nom:
            type: string
            length: 30
            nullable: false
        prenom:
            type: string
            length: 30
            nullable: false
        freq_actu:
            type: string
            values: ['mois', 'jour', 'null']

    manyToMany:
        groupes:
            cascade: [ "persist", "merge" ]
            targetEntity: ProjetL3\GroupeBundle\Entity\Groupe
            mappedBy: users
        groups_administrated:
            cascade: [ "persist", "merge" ]
            targetEntity: ProjetL3\GroupeBundle\Entity\Groupe
            mappedBy: admins
        liens:
            cascade: [ "persist", "merge" ]
            targetEntity: ProjetL3\LienBundle\Entity\Lien
            inversedBy: users
            joinTable:
                name: bibliotheque
                joinColumns:
                    user_id:
                        referencedColumnName: id
                inverseJoinColumns:
                    lien_id:
                        referencedColumnName: id

    oneToMany:
        notes:
            targetEntity: ProjetL3\LienBundle\Entity\NoteLien
            mappedBy: user

    uniqueConstraints:
        unique_credential:
            columns: [nom,prenom]