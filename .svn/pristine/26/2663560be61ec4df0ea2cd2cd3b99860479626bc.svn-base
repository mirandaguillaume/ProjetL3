{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Lien</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ entity.url }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Nb_votes</th>
                <td>{{ entity.nbvotes }}</td>
            </tr>
            <tr>
                <th>Nb_clics</th>
                <td>{{ entity.nbclics }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.desc }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('lien') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('lien_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
